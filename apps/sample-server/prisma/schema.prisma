datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  author     String
  authors    Author?  @relation(fields: [authorsId], references: [id])
  authorsId  String?
  comments   Comment? @relation(fields: [commentsId], references: [id])
  commentsId String?  @unique
  content    String?
  cover      Json
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  title      String?
  updatedAt  DateTime @updatedAt
}

model Comment {
  comment   String
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  pid       Post?
  updatedAt DateTime @updatedAt
}

model Author {
  createdAt DateTime @default(now())
  family    String?
  id        String   @id @default(cuid())
  name      String?
  post      Post[]
  updatedAt DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
